{
    "include": [
        "./src/**/*",
        "custom.d.ts"
    ],
    "compilerOptions": {
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react-jsx",
        "sourceMap": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "module": "esnext",
        "isolatedModules": true,
        "noEmit": true
    }
}